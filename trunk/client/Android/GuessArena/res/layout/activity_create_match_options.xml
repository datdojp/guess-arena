<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <Button
                        android:id="@+id/bt_beginner"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/match_level_button_bg_states"
                        android:text="@string/beginner"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_easy"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/match_level_button_bg_states"
                        android:text="@string/easy"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_normal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/match_level_button_bg_states"
                        android:text="@string/normal"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_hard"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/match_level_button_bg_states"
                        android:text="@string/hard"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_very_hard"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/match_level_button_bg_states"
                        android:text="@string/very_hard"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_crazy"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/match_level_button_bg_states"
                        android:text="@string/crazy"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_impossible"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/match_level_button_bg_states"
                        android:text="@string/impossible"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_word_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_answer_time_in_minutes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_hint_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_guess_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_correction_percentages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_retry_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/one_one_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/match_level_button_bg_states"
                    android:gravity="center"
                    android:text="@string/one_one"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exp_bet_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/match_level_button_bg_states"
                    android:gravity="center"
                    android:text="@string/exp_bet"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buki_bet_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/match_level_button_bg_states"
                    android:gravity="center"
                    android:text="@string/buki_bet"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/one_one_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/one_one_description" />

                <LinearLayout
                    android:id="@+id/exp_bet_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/exp_bet_description" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/exp_point_to_bet"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="1000"
                        tools:ignore="HardcodedText,TextFields" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buki_bet_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/buki_bet_description" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/buki_to_bet"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="60dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="5dp" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_1"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_2"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_3"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_2"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_4"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_1"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_3"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_4"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_1"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_2"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_3"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_4"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_1"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_2"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_3"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/buki_bg"
                                android:padding="1dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/buki_4"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/next" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>