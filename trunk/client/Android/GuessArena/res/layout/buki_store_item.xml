<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="#afe"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/buki_bg"
        android:padding="1dp"
        android:src="@drawable/buki_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Troll buki"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use this buki to disable enemy buki without letting him know about that blah blah blah" />
    </LinearLayout>

    <Button
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_gravity="right|center_vertical"
        android:text="BUY" />

</LinearLayout>